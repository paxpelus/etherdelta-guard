{
    "manifest_version": 2,
  
    "name": "Etherdelta Guard",
    "description": "This extension verifies that the etherdelta webpage has not be tampered by checking the md5 hash of several files",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["https://etherdelta.com/*"],
            "js": ["md5.js", "script.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
      "default_icon": "icon-inactive.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ]
  }